{
  "include": [
    "src/core/*.ts"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist/lib",
    "target": "ES6",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": "./node_modules",
    "allowUnusedLabels": true
  }
}